<div class="title-container d-flex justify-content-center mx-0">
  <h1>Your score is</h1>
</div>

<div class="text-container row">
  <div class="col-12 d-flex justify-content-center">
    <div class="score-box" style="background-color:<%= @score_color if @score_color %>">
      <p class="total-score"><%= @score.total %></p>
    </div>
  </div>
  <div class="col-12 text-center">
    <% if current_user.admin %>
      <%= link_to "Edit", edit_score_path(@score) %>
    <% end %>
  </div>
  <div class="col-12">
    <p class="score-description"><strong><%= @score.user.name %></strong>, <%= @score.description %></p>
  </div>
  <div class="col-12 text-center">
    <%= link_to "<i class='far fa-file-pdf mr-2'></i> Print to PDF".html_safe, score_path(@score, format: :pdf), class: "marble-button"%>
  </div>
</div>

